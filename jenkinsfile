pipeline {
  agent { docker {image "python:3"} }
  stages {
        stage('build'){
          steps{ 
              sh 'python -m pip install Django'
              dir("./rp-portfolio") {
                  sh "ls -l"
                  sh 'python manage.py makemigrations projects'
                  sh 'python manage.py migrate projects'
              }
          }
        }
        stage('deploy') {
            steps {
               sh 'cp -r ./rp-portfolio /deploy'
            }
        }
    }
}
