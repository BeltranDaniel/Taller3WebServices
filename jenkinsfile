pipeline {
  agent any
  stages {
        stage('deploy') {
            steps {
                sh 'python --version'
                sh 'rm -r /deploy/rp-portfolio'
                sh 'cp -r ./rp-portfolio /deploy'
                sh 'python manage.py makemigrations projects'
                sh 'python manage.py migrate projects'
                sh 'python manage.py runserver 0.0.0.0:8000'
            }
        }
    }
}
