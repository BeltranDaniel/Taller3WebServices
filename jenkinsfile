pipeline {
  agent any
  stages { 
        stage('set-up'){
          steps {
            sh 'cp -r ./rp-portfolio /deploy'
          }
        }
        stage('lint'){
          steps{ 
               script {
                 def ret = sh(script: 'docker exec django-app pylint ./rp-portfolio', returnStatus: true)
                 if( ret != 0 ){
                  currentBuild.result = 'UNSTABLE'
                 }
               }
          }
        }
        stage('deploy') {
            steps {
               sh 'docker exec django-app python rp-portfolio/manage.py makemigrations rp-portfolio/projects'
               sh 'docker exec django-app python rp-portfolio/manage.py migrate rp-portfolio/projects'
               sh 'docker restart django-app'
           }
        }
    }
}
